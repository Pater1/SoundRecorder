<?xml version="1.0" encoding="utf-8"?>
<com.danielkim.soundrecorder.edit.views.StationaryScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                                             xmlns:tools="http://schemas.android.com/tools"
                                                             android:id="@+id/channelScrollView"
                                                             android:layout_width="wrap_content"
                                                             android:layout_height="match_parent"
                                                             tools:context=".edit.fragments.DeckFragment">

    <com.danielkim.soundrecorder.edit.views.StationaryHorizontalScrollView
        android:id="@+id/channelHorizontalScrollView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/channelLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>

            <com.danielkim.soundrecorder.edit.canvases.DeckCursorCanvas
                android:id="@+id/deckCursorCanvas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
    </com.danielkim.soundrecorder.edit.views.StationaryHorizontalScrollView>
</com.danielkim.soundrecorder.edit.views.StationaryScrollView>